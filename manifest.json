{
  "manifest_version": 2,
  "name": "AirTicket Tools",
  "version": "1.0",
  "description": "AirTicket Helper",
  "author": "travel",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "pages/popup.html",
    "default_title": "AirTicket Tools"
  },
  "content_scripts": [
    {
      "matches": [
        "https://flights.ctrip.com/international/search*"
      ],
      "js": [
        "js/common.js",
        "js/moment.js",
        "js/content/content-script.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://flights.ctrip.com/international/search*"
      ],
      "js": [
        "js/jquery-1.8.3.js",
        "js/content/interceptor.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "js/jquery-1.8.3.js",
      "js/common.js",
      "js/lodash.js",
      "js/background/tabOperations.js",
      "js/background/background.js",
      "js/background/contextMenu.js"
    ]
  },
  "permissions": [
    "tabs",
    // 标签
    "storage",
    //存储
    "notifications",
    "declarativeContent",
    "contextMenus"
  ]
}
