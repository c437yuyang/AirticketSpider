{
  "manifest_version": 2,
  "name": "BOC Tools",
  "version": "1.0",
  "description": "BOC Helper",
  "author": "travel",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "pages/popup.html",
    "default_title": "BOC Tools"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/common.js",
        "js/moment.js",
        "js/content/content-script.js"
      ],
      // 代码注入的时间，可选值： "document_start", "document_end", or "document_idle"，最后一个表示页面空闲时，默认document_idle
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://srh.bankofchina.com/search/whpj/search*"
      ],
      "js": [
        "js/jquery-1.8.3.js",
        "js/content/orderList.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "js/jquery-1.8.3.js",
      "js/common.js",
      "js/background/tabOperations.js",
      "js/background/background.js",
      "js/background/contextMenu.js"
    ]
  },
  "permissions": [
    "tabs",
    // 标签
    "storage",
    //存储
    "notifications",
    "declarativeContent",
    "contextMenus"
  ]
}
